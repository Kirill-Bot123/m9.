def all_variants(text): # создаем функцию для вызова генератора
    for i in text: # создаем цикл в котром перебираем элементы текста что бы они выводились по порядку
        yield i # возвращаем элементы текста с помощью вызова генератора
    print(text[0:2]) # выводим элементы текста начиная с 1-ого символа заканчивая 2-ым
    print(text[1:3]) # выводим элементы текста начиная с 2-ого символа заканчивая 3-им
    print(text) # в конечном итоге выводим просто наш текст
                # который мы зададим при вызове генератора изначально в функции


a = all_variants("abc") # задаем элемент текста >text<
for i in a: # вызываем наш генератор
    print(i) # выводим элементы один за другим
