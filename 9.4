# создаем переменные которые мы будем сравнивать между собой на совпадение символов строк
first = 'Мама мыла раму'
second = 'Рамена мало было'
# создаем переменную в которую будем записывать функцию >lambda< для того что бы потом к ней обратиться
lambda_function = lambda x, y: str(x) == str(y)   # выполняем сравнение строк между двумя списками
print(list(map(lambda_function, first, second)))   # в качестве аргументов >x,y< подаем наши списки >first< , >second<

def get_advanced_writer(file_name):
    def write_everything(*data_set):
        with open(file_name, 'a', encoding='utf-8') as file:
            for data in data_set:
                file.write(f'{data}\n')

    return write_everything


write = get_advanced_writer('example.txt')
write('Это строчка', ['А', 'это', 'уже', 'число', 5, 'в', 'списке'])


import random    # импортируем библиотеку >random< для случайного выбора слов


class MysticBall:
    def __init__(self, words):
        self.words = tuple(words)

    def __call__(self):
        random.choice(self.words)

        return random.choice(self.words)


